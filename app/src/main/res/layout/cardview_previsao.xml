<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:background="@drawable/cardview_bg"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/tvDia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:text="Segunda"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivteste"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_below="@id/tvDia"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"

        android:padding="4dp"
        app:srcCompat="@drawable/icone13large" />

    <TextView
        android:id="@+id/tvDescricaoPrev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivteste"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"

        android:gravity="center"
        android:padding="4dp"

        android:text="Nuvens dispersas"
        android:textColor="@android:color/white" />


    <TextView
        android:id="@+id/tvMaxMin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDescricaoPrev"
        android:layout_centerHorizontal="true"

        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"

        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="22°/16°"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</RelativeLayout>




